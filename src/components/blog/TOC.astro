---
import { generateToc } from "@/utils";
import type { MarkdownHeading } from "astro";

import TOCHeading from "./TOCHeading.astro";

interface Props {
  headings: MarkdownHeading[];
}

const { headings } = Astro.props;

const _toc = generateToc(headings);
---

<aside
  class="text-sm sticky top-20 order-2 hidden lg:flex lg:flex-col lg:-mr-80 lg:basis-80 xl:-mr-80 xl:basis-72 2xl:-mr-60 2xl:basis-60"
>
  <h2 class="font-semibold">TABLE OF CONTENTS</h2>
  <ul class="text-card-foreground">
    {_toc.map((heading) => <TOCHeading heading={heading} />)}
  </ul>
</aside>
