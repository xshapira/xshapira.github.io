---
import Button from "@/components/Button.astro";
import ToolSection from "@/components/ToolSection.astro";
import PageLayout from "@/layouts/BaseLayout.astro";

const _LANGUAGES = [
  {
    name: "Python",
    iconPath: "python",
  },
  {
    name: "SQL",
    iconPath: "sql",
  },
  {
    name: "Javascript",
    iconPath: "javascript",
  },
  {
    name: "HTML",
    iconPath: "html5",
  },
  {
    name: "CSS",
    iconPath: "css3",
  },
];

const _FRAMEWORKS = [
  {
    name: "Django",
    iconPath: "django",
  },
  {
    name: "FastAPI",
    iconPath: "fastapi",
  },
  {
    name: "LangChain",
    iconPath: "langchain",
  },
  {
    name: "Streamlit",
    iconPath: "streamlit",
  },
  {
    name: "Tailwindcss",
    iconPath: "tailwindcss",
  },
];

const _DATABASES = [
  {
    name: "PostgreSQL",
    iconPath: "postgresql",
  },
  {
    name: "SQLite",
    iconPath: "sqlite",
  },
  {
    name: "MongoDB",
    iconPath: "mongodb",
  },
];

const _TECHNOLOGIES = [
  {
    name: "Git",
    iconPath: "git",
  },
  {
    name: "RabbitMQ",
    iconPath: "rabbitmq",
  },
  {
    name: "GitHub Actions",
    iconPath: "github-actions",
  },
  {
    name: "Poetry",
    iconPath: "poetry",
  },
  {
